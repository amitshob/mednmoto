<%= render "layouts/errors", :object => @post %>
<div class="container">
  <%= form_for @post, remote:true do |f| %>
    <%= f.label :title  %><br>
    <%= f.text_field :title, :size=>100 %><br>
    <%= f.label :description %><br>
    <%= f.text_area :description, :cols=>"100", :rows =>"10" %>
    <%= f.submit %>
  <% end %>
</div>
