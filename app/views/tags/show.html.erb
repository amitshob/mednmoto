
<div class=cotainer>
  <div class = "column-center">

    <h4> Posts containing <%= @tag.name %> /h4><hr>
    <ul>
      <% @tag.posts.each do |post| %>
        <li>
          <%= link_to post.title, post_path(post) %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class ="column-left">
    <div class ="col-md-4">

    </div>
  </div>
  <div class = "column-right">
    <p align="center"><%= link_to "Edit Tag", edit_tag_path(@tag) %></p>
    <p align="center"><%= link_to "Delete Tag", tag_path(@tag),
                             :data => {:confirm => "You sure?",
                                       :method => "delete"} %></p>
  </div>
</div>
